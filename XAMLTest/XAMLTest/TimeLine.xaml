<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:XAMLTest"
             NavigationPage.HasNavigationBar="false"
             x:Class="XAMLTest.TimeLine">
    
    <ContentPage.Content>
        <StackLayout Padding="5,10" x:Name="layout">
            <Entry x:Name="TimelineTweet" Placeholder="Wat wil je delen?" MaxLength="140" />
            <!--<ListView x:Name="TimeLineView" ItemsSource=""></ListView>-->
            <ListView x:Name="TimeLineView" BindingContext="{Binding MyNiceObject}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding MyNiceObject}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
    
</ContentPage>